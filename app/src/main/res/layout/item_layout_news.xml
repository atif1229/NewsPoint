<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivNewsImage"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_launcher_background"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some title"
            android:layout_toRightOf="@id/ivNewsImage"
            android:layout_alignTop="@id/ivNewsImage"
            />
        <TextView
            android:id="@+id/tvNewsDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="some descriptdescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptiondescriptionion"
            android:layout_toRightOf="@id/ivNewsImage"
            android:layout_toEndOf="@id/ivNewsImage"
            android:layout_below="@id/tvNewsTitle"
            android:maxLines="3"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tvPublishDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2-22-2019"
            android:layout_toRightOf="@id/ivNewsImage"
            android:layout_below="@id/tvNewsDetail"
            />


    </RelativeLayout>
</androidx.cardview.widget.CardView>